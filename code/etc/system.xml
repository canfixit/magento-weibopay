<config>
   <sections>
        <payment>
            <groups>
                <sinapay_payment module="sinapay">
                    <label>CosmoCommerce Sinapay Payment</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>300</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <active translate="label">
                            <label>Enabled</label>
							  <comment>
								<![CDATA[激活插件总的功能]]>
							  </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </active>
                        <title translate="label comment">
                            <label>Title</label>
							  <comment>
								<![CDATA[前台的支付名称。<br /><span class="notice">This is a required field</span>]]>
							  </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </title>
                        <sendemail translate="label comment">
                            <label>发送邮件：微博钱包交易完成</label>
							  <comment>
								<![CDATA[发送邮件：微博钱包交易完成]]>
							  </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sendemail>
                        <sendemail_wbp translate="label comment">
                            <label>发送邮件：担保交易-等待付款</label>
							  <comment>
								<![CDATA[发送邮件：担保交易-等待买家付款]]>
							  </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sendemail_wbp>
                        <sendemail_wssg translate="label comment">
                            <label>发送邮件：担保交易-等待发货</label>
							  <comment>
								<![CDATA[发送邮件：担保交易-买家付款成功,等待卖家发货]]>
							  </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sendemail_wssg>
                        <sendemail_wbcg translate="label comment">
                            <label>发送邮件：担保交易-等待确认</label>
							  <comment>
								<![CDATA[发送邮件：担保交易-卖家已经发货等待买家确认]]>
							  </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sendemail_wbcg>
                        <service_type translate="label comment">
                            <label>Contract Type</label>
							  <comment>
								<![CDATA[Contract Type with Sinapay. <br /><b>Create Forex Trade</b>:Internation Payments Type<br /><b>Trade Create By Buyer</b><br /><b>Create Direct Pay By User</b><br /><b>Create Partner Trade By Buyer</b><br />Trouble to choose please contact:<b>payment@cosmocommerce.com</b><br /><span class="notice">This is a required field</span>]]>
							  </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>sinapay/source_servicetype</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </service_type>
                        <gateway translate="label">
                            <label>Gateway</label>
							  <comment>
								<![CDATA[Deprecated field]]>
							  </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </gateway>
                        <partner_id translate="label comment">
                            <label>Partner ID</label>
							  <comment>
								<![CDATA[Please find the Partner ID at sinapay merchant center.<br /><span class="notice">This is a required field</span>]]>
							  </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </partner_id>
                        <security_code translate="label comment">
                            <label>Security Code</label>
							  <comment>
								<![CDATA[Please find the Security Code at sinapay merchant center.<br /><span class="notice">This is a required field</span>]]>
							  </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </security_code>
                        <seller_email translate="label comment">
                            <label>Seller Email</label>
							  <comment>
								<![CDATA[Please fill the seller email which bind with your sinapay merchant.<br /><span class="notice">This is a required field except Internation Payment Type</span>]]>
							  </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </seller_email>
                        <transport translate="label comment">
                            <label>Transport</label>
							  <comment>
								<![CDATA[Default please select https.<br /><span class="notice">This is a required field</span>]]>
							  </comment>
                            <frontend_type>select</frontend_type>
                            <source_model>sinapay/source_transport</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </transport>
                        <order_status translate="label">
                            <label>New order status</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
		                </order_status>
                        <order_status_payment_accepted translate="label">
                            <label>Order status when payment accepted by Sinapay</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
		                </order_status_payment_accepted>
		                <order_status_payment_refused translate="label">
                            <label>Order status when payment refused by Sinapay</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_order_status</source_model>
                            <sort_order>14</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
		                </order_status_payment_refused>
                        <allowspecific translate="label">
                            <label>Payment from applicable countries</label>
                            <frontend_type>allowspecific</frontend_type>
                            <sort_order>15</sort_order>
                            <source_model>adminhtml/system_config_source_payment_allspecificcountries</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </allowspecific>
                        <specificcountry translate="label">
                            <label>Payment from Specific countries</label>
                            <frontend_type>multiselect</frontend_type>
                            <sort_order>16</sort_order>
                            <source_model>adminhtml/system_config_source_country</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </specificcountry>
                        <sort_order translate="label">
                            <label>Sort order</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>17</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sort_order>
                    </fields>
                </sinapay_payment>
            </groups>
        </payment>
    </sections>
</config>
